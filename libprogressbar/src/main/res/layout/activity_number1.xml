<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="长方形：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            android:id="@+id/epb1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:visibility="visible"
            app:lyj_cut_corner="none"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="10dp"
            app:lyj_text_align="top"
            app:lyj_text_bold="true"
            app:lyj_text_color="#00FBD0"
            app:lyj_text_offset="4dp"
            app:lyj_text_size="12sp"
            app:lyj_text_visible="true"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="平行四边形：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            android:id="@+id/epb2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:visibility="visible"
            app:lyj_cut_corner="parallelogram"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="10dp"
            app:lyj_text_align="top"
            app:lyj_text_bold="true"
            app:lyj_text_color="#00FBD0"
            app:lyj_text_offset="4dp"
            app:lyj_text_size="12sp"
            app:lyj_text_visible="true"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="椭圆角矩形：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            android:id="@+id/epb3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:visibility="visible"
            app:lyj_cut_corner="ellipse"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="10dp"
            app:lyj_text_align="top"
            app:lyj_text_bold="true"
            app:lyj_text_color="#00FBD0"
            app:lyj_text_offset="4dp"
            app:lyj_text_size="12sp"
            app:lyj_text_visible="true"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进度文字居中：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            android:id="@+id/epb4"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:visibility="visible"
            app:lyj_cut_corner="ellipse"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="10dp"
            app:lyj_text_align="middle"
            app:lyj_text_bold="true"
            app:lyj_text_color="#00FBD0"
            app:lyj_text_offset="5dp"
            app:lyj_text_size="12sp"
            app:lyj_text_visible="true"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进度文字隐藏：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            android:id="@+id/epb5"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:visibility="visible"
            app:lyj_cut_corner="ellipse"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="10dp"
            app:lyj_text_visible="false"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="伪按钮：" />

        <com.geek.libprogressbar.EnhancedProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="50"
            android:visibility="visible"
            app:lyj_cut_corner="ellipse"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="43dp"
            app:lyj_text_visible="false"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="43dp" />

        <com.geek.libprogressbar.EnhancedProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="50"
            android:visibility="visible"
            app:lyj_cut_corner="parallelogram"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="43dp"
            app:lyj_text_visible="false"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="43dp" />

        <com.geek.libprogressbar.EnhancedProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="50"
            android:visibility="visible"
            app:lyj_cut_corner="none"
            app:lyj_reached_color="#00FBD0"
            app:lyj_reached_height="43dp"
            app:lyj_text_visible="false"
            app:lyj_unreached_color="#E5E5E5"
            app:lyj_unreached_height="43dp" />

    </LinearLayout>

</ScrollView>
