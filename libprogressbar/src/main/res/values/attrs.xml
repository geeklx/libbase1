<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="percent_color" format="color|integer" />
    <attr name="percent_size" format="dimension" />
    <attr name="progress_bar_bg" format="color|integer" />
    <attr name="progress_bg" format="color|integer" />
    <attr name="progress_max" format="integer" />
    <attr name="distance_text_bar" format="dimension" />

    <declare-styleable name="NumberHorizontalProgressBar">
        <attr name="percent_color"/>
        <!-- 进度百分比文字颜色 -->
        <attr name="percent_size" />
        <!-- 进度百分比文字大小 -->
        <attr name="percent_bg_color" format="color|integer" />
        <!--百分比背景-->
        <attr name="progress_bar_bg"/>
        <!--进度条背景-->
        <attr name="progress_bg"/>
        <!--进度背景-->
        <attr name="progress_round" format="dimension" />
        <!-- 矩形进度条 四周圆角大小 -->
        <attr name="show_percent" format="boolean" />
        <!-- 进度文字是否显示百分号 -->
        <attr name="progress_bar_height" format="dimension" />
        <!--进度条高度-->
        <attr name="progress_max" />
        <!--最大进度值-->
        <attr name="distance_text_bar"/>
        <!--文字与进度条的垂直距离-->
        <attr name="progress_bar_style">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="percent_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="percent_color"/>
        <!-- 进度百分比文字颜色 -->
        <attr name="percent_size"/>
        <!--进度值大小-->
        <attr name="progress_bar_bg"/>
        <!--进度条背景-->
        <attr name="progress_bg"/>
        <!--进度背景-->
        <attr name="progress_max"/>
        <!--最大进度值-->
        <attr name="distance_text_bar"/>
        <!--文字与进度条的距离-->
        <attr name="stroke_width_cir" format="dimension"/>
        <!-- 圆形进度条边框大小 -->
        <attr name="progress_bar_start_round" format="integer"/>
        <!--进度条起始弧度-->
        <attr name="progress_style">
            <enum name="standard" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_maxs" format="integer"/>

        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>
        <attr name="progress_icon" format="reference" />
        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="EnhancedProgressBar">
        <attr name="android:progress" format="integer" />
        <attr name="lyj_unreached_color" format="reference|color" />
        <attr name="lyj_reached_color" format="reference|color" />
        <attr name="lyj_reached_height" format="reference|dimension" />
        <attr name="lyj_unreached_height" format="reference|dimension" />
        <attr name="lyj_text_visible" format="boolean" />
        <attr name="lyj_text_size" format="reference|dimension" />
        <attr name="lyj_text_color" format="reference|color" />
        <attr name="lyj_text_offset" format="reference|dimension" />
        <attr name="lyj_text_align" format="enum">
            <enum name="middle" value="0" />
            <enum name="top" value="1" />
        </attr>
        <attr name="lyj_text_bold" format="boolean" />
        <attr name="lyj_cut_corner" format="enum">
            <enum name="none" value="0" />
            <enum name="parallelogram" value="1" />
            <enum name="ellipse" value="2" />
        </attr>
    </declare-styleable>

</resources>