<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name = "CameraBridgeViewBase" >
       <attr name="show_fps" format="boolean"/>
       <attr name="camera_id" format="integer" >
          <enum name="any" value="-1" />
          <enum name="back" value="99" />
          <enum name="front" value="98" />
       </attr>
    </declare-styleable>

    <declare-styleable name="SmartOpenCV">
        <!--设置为true，如果想使用前置摄像头显示预览-->
        <attr name="is_front_camera" format="boolean" />
        <!--设置为true，如果想使用Camera2显示预览-->
        <attr name="use_camera2" format="boolean" />
        <!--设置为true，则保持屏幕常亮-->
        <attr name="keep_screen_on" format="boolean" />
        <!--设置为true，如果想使用opencv官方默认的预览图像绘制算法-->
        <attr name="use_opencv_default_draw_strategy" format="boolean" />
        <!--设置为true，如果想使用opencv官方默认的预览帧大小计算算法-->
        <attr name="use_opencv_default_preview_calculator" format="boolean" />
        <attr name="preview_max_width" format="integer" />
        <attr name="preview_max_height" format="integer" />
    </declare-styleable>
</resources>
